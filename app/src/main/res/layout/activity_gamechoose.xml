<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpage"
    tools:context=".GamechooseActivity">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:onClick="singleplayer"
        android:text="Çıkış Yap"
        android:textColorHighlight="@color/cardview_dark_background"
        android:theme="@style/Theme.Material3.DynamicColors.Light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleplayerbutton" />

    <CheckBox
        android:id="@+id/gamemode6x6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="67dp"
        android:buttonTint="#DD1818"
        android:text="6x6"
        app:layout_constraintBottom_toTopOf="@+id/multiplayerbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gamemode2x2"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/gamemode2x2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="170dp"
        android:buttonTint="#DD1818"
        android:text="2x2"
        app:layout_constraintEnd_toStartOf="@+id/gamemode6x6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/singleplayerbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="12dp"
        android:onClick="singleplayer"
        android:text="Tek Oyunculu"
        android:textColorHighlight="@color/cardview_dark_background"
        android:theme="@style/Theme.Material3.DynamicColors.Light"
        app:layout_constraintEnd_toStartOf="@+id/multiplayerbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamemode2x2" />

    <Button
        android:id="@+id/getbackChangePass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="singleplayer"
        android:text="Şifre değiştir"
        android:textColorHighlight="@color/cardview_dark_background"
        android:theme="@style/Theme.Material3.DynamicColors.Light"
        app:layout_constraintEnd_toEndOf="@+id/logoutButton"
        app:layout_constraintStart_toStartOf="@+id/logoutButton"
        app:layout_constraintTop_toBottomOf="@+id/logoutButton" />

    <Button
        android:id="@+id/multiplayerbutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="269dp"
        android:onClick="multipleplayer"
        android:text="Çoklu Oyunculu"
        android:textColorHighlight="@color/cardview_dark_background"
        android:theme="@style/Theme.Material3.DynamicColors.Light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/singleplayerbutton"
        app:layout_constraintTop_toBottomOf="@+id/gamemode6x6" />

    <CheckBox
        android:id="@+id/gamemode4x4"
        android:layout_width="66dp"
        android:layout_height="45dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="56dp"
        android:buttonTint="#DD1818"
        android:text="4x4"
        app:layout_constraintEnd_toStartOf="@+id/gamemode6x6"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="320dp"
        android:text="Oyun modunu seçiniz"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/multiplayerbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>